@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" action="~/Admin/Administrador/Editar">
    <input type="hidden" asp-for="Especie.Id"/>
    <label>Nombre:</label>
    <input required="required" type="text" asp-for="Especie.Especie"/>
    <label>Clase:</label>
    <select required="required" asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required="required" type="text" asp-for="Especie.Habitat"/>
    <label>Peso:</label>
    <input type="number" step="0.1" required="required" asp-for="Especie.Peso"/>
    <label>Tamaño:</label>
    <input type="number" step="0.1" required="required" asp-for="Especie.Tamaño"/>
    <label>Observaciones:</label>
    <textarea required="required" rows="2" cols="20" asp-for="Especie.Observaciones"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Guardar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>