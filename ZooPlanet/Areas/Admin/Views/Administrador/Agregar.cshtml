@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h1>Agregar Especies</h1>

<form method="post" action="~/Admin/Administrador/Agregar">
    <label>Nombre:</label>
    <input type="text" asp-for="Especie.Especie" required="required" />@{
        Layout = "_Layout";
    }
    <label>Clase:</label>
    <select asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))" required="required">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input type="text" asp-for="Especie.Habitat" required="required" />
    <label>Peso:</label>
    <input type="number" asp-for="Especie.Peso" step="0.1" required="required"/>
    <label>Tamaño:</label>
    <input asp-for="Especie.Tamaño" step="0.1" required="required"/>
    <label>Observaciones:</label>
    <textarea rows="2" cols="20" asp-for="Especie.Observaciones" required="required"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Agregar" />
    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>